  <script>
    const app = document.getElementById('app');
    function setMode(mode){
      const winBtn = document.getElementById('winBtn');
      const macBtn = document.getElementById('macBtn');
      if(mode==='mac'){
        document.documentElement.classList.add('mac-mode');
        macBtn.classList.add('active'); winBtn.classList.remove('active');
      } else {
        document.documentElement.classList.remove('mac-mode');
        winBtn.classList.add('active'); macBtn.classList.remove('active');
      }
    }
    function filterList(){
      const q = document.getElementById('filter').value.toLowerCase();
      document.querySelectorAll('[data-key]').forEach(el=>{
        const key = el.getAttribute('data-key')||'';
        const card = el.closest('.card');
        const text = (card.innerText||'').toLowerCase();
        if(q.trim()==='') { card.style.display='block'; return; }
        if(text.indexOf(q)===-1) card.style.display='none'; else card.style.display='block';
      });
    }

    function downloadHTML(){
      const content = '<!doctype html>\n' + document.documentElement.outerHTML;
      const blob = new Blob([content],{type:'text/html'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a'); a.href = url; a.download = 'Photoshop_2026_Shortcuts.html'; document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
    }

    // keyboard shortcut: toggle platform with `~` (backtick)
    document.addEventListener('keydown', e=>{
      if(e.key==='`'){
        document.documentElement.classList.toggle('mac-mode');
        document.getElementById('winBtn').classList.toggle('active');
        document.getElementById('macBtn').classList.toggle('active');
      }
    });
  </script>
